<% provide(:title, "Login") %>
<div class="main">
  <div class="container">
    <div class="offset-lg-4 offset-md-3 offset-sm-2 col-lg-4 col-md-6 col-sm-8 mx-auto">
      <div class="form-wrap">
        <div class="form-group text-center">
          <h2 class="logo-img mx-auto"></h2>
        </div>
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "ログインする", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
      <div class="form-wrap">
        <p class="text-center">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <%= f.hidden_field :email, value: User.find(1).email %>
            <%= f.hidden_field :password, value: "password" %>
            <%= f.submit "テストユーザーでログイン", class:"btn btn-success w-100 mt-3"%>
            <span>※テストユーザの削除・編集は不可</span>
          <% end %>
          <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Facebookでログイン", omniauth_authorize_path(resource_name, provider), class:"btn btn-primary w-100 mt-3" %><br />
          <% end %>
          <%= link_to "アカウントの登録画面へ", new_user_registration_path, class:"btn btn-info w-100 mt-3"%>
        </p>
      </div>
    </div>
  </div>
</div>
