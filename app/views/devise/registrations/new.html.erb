<% provide(:title, "Registration") %>
<div class="main">
  <div class="container">
    <div class="offset-lg-4 offset-md-3 offset-sm-2 col-lg-4 col-md-6 col-sm-8 mx-auto">
      <div class="form-wrap">
        <div class="form-group text-center">
          <h2 class="logo-img mx-auto"></h2>
        </div>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="form-group">
            <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_field :name, autofocus: true, placeholder: "名前", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.text_field :user_name, autofocus: true, placeholder: "ユーザーネーム", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", placeholder: "パスワード", class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "パスワードの確認", class: "form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "登録する", class: "btn btn-primary w-100" %>
          </div>
        <% end %>
      </div>
      <div class="form-wrap">
        <p class="text-center">
          アカウントをお持ちですか？
          <%= link_to "ログインする", new_user_session_path%></br>
        </p>
      </div>
    </div>
  </div>
</div>
